<UserControl x:Class="PretoBoost.Views.GpuBoostPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="900"
             Background="Transparent">

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,25">
                <TextBlock Text="GPU BOOST" Style="{StaticResource TitleTextStyle}"/>
                <TextBlock Text="Otimizações para placas de vídeo NVIDIA e AMD" 
                           FontSize="14" Foreground="#666666" Margin="0,5,0,0"/>
            </StackPanel>

            <!-- Content Grid -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left Column - NVIDIA -->
                <StackPanel Grid.Column="0">
                    <!-- GPU NVIDIA Header -->
                    <Border Background="#15FFFFFF" CornerRadius="8" Padding="15,10" Margin="0,0,0,15">
                        <TextBlock Text="GPU NVIDIA" FontSize="16" FontWeight="SemiBold" Foreground="#76B900"/>
                    </Border>

                    <!-- NVIDIA Tweaks Card -->
                    <Border Style="{StaticResource CardPanel}" Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Text="NVIDIA Tweaks" Style="{StaticResource CategoryTextStyle}"/>
                            <ItemsControl ItemsSource="{Binding NvidiaTweaksToggles}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <CheckBox Style="{StaticResource ModernToggleSwitch}" 
                                                  Content="{Binding Name}" 
                                                  IsChecked="{Binding IsEnabled, Mode=TwoWay}"
                                                  Margin="0,8,0,0"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>

                    <!-- NVIDIA Dwords Card -->
                    <Border Style="{StaticResource CardPanel}" Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Text="NVIDIA Dwords" Style="{StaticResource CategoryTextStyle}"/>
                            <ItemsControl ItemsSource="{Binding NvidiaDwordsToggles}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <CheckBox Style="{StaticResource ModernToggleSwitch}" 
                                                  Content="{Binding Name}" 
                                                  IsChecked="{Binding IsEnabled, Mode=TwoWay}"
                                                  Margin="0,8,0,0"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>

                    <!-- Geforce Experience Card -->
                    <Border Style="{StaticResource CardPanel}">
                        <StackPanel>
                            <TextBlock Text="Geforce Experience" Style="{StaticResource CategoryTextStyle}"/>
                            <ItemsControl ItemsSource="{Binding GeforceToggles}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <CheckBox Style="{StaticResource ModernToggleSwitch}" 
                                                  Content="{Binding Name}" 
                                                  IsChecked="{Binding IsEnabled, Mode=TwoWay}"
                                                  Margin="0,8,0,0"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Right Column - AMD -->
                <StackPanel Grid.Column="2">
                    <!-- GPU AMD Header -->
                    <Border Background="#15FFFFFF" CornerRadius="8" Padding="15,10" Margin="0,0,0,15">
                        <TextBlock Text="GPU AMD" FontSize="16" FontWeight="SemiBold" Foreground="#ED1C24"/>
                    </Border>

                    <!-- AMD Tweaks Card -->
                    <Border Style="{StaticResource CardPanel}">
                        <StackPanel>
                            <TextBlock Text="AMD Tweaks" Style="{StaticResource CategoryTextStyle}"/>
                            <ItemsControl ItemsSource="{Binding AmdToggles}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <CheckBox Style="{StaticResource ModernToggleSwitch}" 
                                                  Content="{Binding Name}" 
                                                  IsChecked="{Binding IsEnabled, Mode=TwoWay}"
                                                  Margin="0,8,0,0"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>

                    <!-- Info Card -->
                    <Border Background="#151A1A25" CornerRadius="12" Padding="20" Margin="0,20,0,0"
                            BorderBrush="#2A2A3A" BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="⚠️ Atenção" FontSize="14" FontWeight="SemiBold" 
                                       Foreground="#FFAA00" Margin="0,0,0,10"/>
                            <TextBlock TextWrapping="Wrap" FontSize="12" Foreground="#888888" LineHeight="20">
                                <Run Text="Algumas otimizações de GPU podem causar instabilidade em certos sistemas. "/>
                                <LineBreak/>
                                <LineBreak/>
                                <Run Text="Recomendamos criar um ponto de restauração antes de aplicar estas configurações."/>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>

            <!-- Action Buttons -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,25,0,0">
                <Button Style="{StaticResource SecondaryButton}" 
                        Content="Reverter Tudo" 
                        Command="{Binding RevertAllCommand}"
                        Margin="0,0,15,0"/>
                <Button Style="{StaticResource ActionButton}" 
                        Content="Aplicar Tudo" 
                        Command="{Binding ApplyAllCommand}"/>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</UserControl>
