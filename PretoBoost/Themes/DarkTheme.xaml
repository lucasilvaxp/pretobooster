<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Cores Principais -->
    <Color x:Key="BackgroundDark">#0A0A0F</Color>
    <Color x:Key="BackgroundMedium">#12121A</Color>
    <Color x:Key="BackgroundLight">#1A1A25</Color>
    <Color x:Key="BackgroundCard">#1E1E2E</Color>
    <Color x:Key="AccentCyan">#00D4FF</Color>
    <Color x:Key="AccentCyanDark">#0099CC</Color>
    <Color x:Key="AccentCyanLight">#66E5FF</Color>
    <Color x:Key="TextPrimary">#FFFFFF</Color>
    <Color x:Key="TextSecondary">#B0B0B0</Color>
    <Color x:Key="TextMuted">#666666</Color>
    <Color x:Key="BorderColor">#2A2A3A</Color>
    <Color x:Key="BorderHover">#3A3A4A</Color>
    <Color x:Key="SuccessGreen">#00FF88</Color>
    <Color x:Key="ErrorRed">#FF4444</Color>
    <Color x:Key="WarningYellow">#FFAA00</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="BackgroundDarkBrush" Color="{StaticResource BackgroundDark}"/>
    <SolidColorBrush x:Key="BackgroundMediumBrush" Color="{StaticResource BackgroundMedium}"/>
    <SolidColorBrush x:Key="BackgroundLightBrush" Color="{StaticResource BackgroundLight}"/>
    <SolidColorBrush x:Key="BackgroundCardBrush" Color="{StaticResource BackgroundCard}"/>
    <SolidColorBrush x:Key="AccentCyanBrush" Color="{StaticResource AccentCyan}"/>
    <SolidColorBrush x:Key="AccentCyanDarkBrush" Color="{StaticResource AccentCyanDark}"/>
    <SolidColorBrush x:Key="AccentCyanLightBrush" Color="{StaticResource AccentCyanLight}"/>
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimary}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondary}"/>
    <SolidColorBrush x:Key="TextMutedBrush" Color="{StaticResource TextMuted}"/>
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
    <SolidColorBrush x:Key="BorderHoverBrush" Color="{StaticResource BorderHover}"/>
    <SolidColorBrush x:Key="SuccessGreenBrush" Color="{StaticResource SuccessGreen}"/>
    <SolidColorBrush x:Key="ErrorRedBrush" Color="{StaticResource ErrorRed}"/>
    <SolidColorBrush x:Key="WarningYellowBrush" Color="{StaticResource WarningYellow}"/>

    <!-- Gradientes -->
    <LinearGradientBrush x:Key="CyanGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource AccentCyan}" Offset="0"/>
        <GradientStop Color="{StaticResource AccentCyanDark}" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="BackgroundGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource BackgroundDark}" Offset="0"/>
        <GradientStop Color="{StaticResource BackgroundMedium}" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="CardGradientBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#252535" Offset="0"/>
        <GradientStop Color="#1A1A28" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="GlowEffectBrush" StartPoint="0.5,0" EndPoint="0.5,1">
        <GradientStop Color="#3300D4FF" Offset="0"/>
        <GradientStop Color="#0000D4FF" Offset="1"/>
    </LinearGradientBrush>

    <!-- Sombras -->
    <DropShadowEffect x:Key="CardShadow" BlurRadius="20" ShadowDepth="0" Color="Black" Opacity="0.5"/>
    <DropShadowEffect x:Key="GlowShadow" BlurRadius="15" ShadowDepth="0" Color="{StaticResource AccentCyan}" Opacity="0.3"/>
    <DropShadowEffect x:Key="ButtonGlow" BlurRadius="10" ShadowDepth="0" Color="{StaticResource AccentCyan}" Opacity="0.5"/>

    <!-- Fontes -->
    <FontFamily x:Key="PrimaryFont">Segoe UI</FontFamily>
    <FontFamily x:Key="TitleFont">Segoe UI Black</FontFamily>
    <FontFamily x:Key="MonoFont">Consolas</FontFamily>

    <!-- Estilos de Texto -->
    <Style x:Key="TitleTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource TitleFont}"/>
        <Setter Property="FontSize" Value="32"/>
        <Setter Property="FontWeight" Value="Black"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
    </Style>

    <Style x:Key="SubtitleTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource PrimaryFont}"/>
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{StaticResource AccentCyanBrush}"/>
    </Style>

    <Style x:Key="CategoryTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource PrimaryFont}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
        <Setter Property="Margin" Value="0,0,0,10"/>
    </Style>

    <Style x:Key="ItemTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource PrimaryFont}"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <!-- Estilo do ScrollViewer -->
    <Style TargetType="ScrollViewer">
        <Setter Property="Background" Value="Transparent"/>
    </Style>

    <Style x:Key="ModernScrollBar" TargetType="ScrollBar">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Width" Value="8"/>
    </Style>

</ResourceDictionary>
