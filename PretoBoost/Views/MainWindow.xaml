<Window x:Class="PretoBoost.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:PretoBoost.ViewModels"
        xmlns:views="clr-namespace:PretoBoost.Views"
        mc:Ignorable="d"
        Title="PretoBoost 2.0 - Windows Optimization Panel" 
        Height="750" Width="1200"
        MinHeight="600" MinWidth="900"
        WindowStartupLocation="CenterScreen"
        Background="#0A0A0F"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResizeWithGrip">

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:UniversalBoostViewModel}">
            <views:UniversalBoostPage/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:Win10BoostViewModel}">
            <views:Win10BoostPage/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:GpuBoostViewModel}">
            <views:GpuBoostPage/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:CleaningViewModel}">
            <views:CleaningPage/>
        </DataTemplate>
    </Window.Resources>

    <Border Background="#0A0A0F" BorderBrush="#1A1A25" BorderThickness="1" CornerRadius="0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Border Grid.Row="0" Background="#0D0D12" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="15,0,0,0">
                        <TextBlock Text="PRETO" FontFamily="Segoe UI Black" FontSize="16" 
                                   Foreground="White" VerticalAlignment="Center"/>
                        <TextBlock Text="BOOST" FontFamily="Segoe UI Black" FontSize="16" 
                                   Foreground="#00D4FF" VerticalAlignment="Center"/>
                        <TextBlock Text=" 2.0" FontFamily="Segoe UI" FontSize="12" 
                                   Foreground="#666666" VerticalAlignment="Center" Margin="5,2,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                        <!-- Admin Status -->
                        <Border Background="#15FFFFFF" CornerRadius="4" Padding="8,4" Margin="0,0,15,0">
                            <TextBlock Text="{Binding AdminStatus}" FontSize="11" 
                                       Foreground="{Binding IsAdmin, Converter={x:Null}}"
                                       VerticalAlignment="Center">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="#FF6B6B"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsAdmin}" Value="True">
                                                <Setter Property="Foreground" Value="#00FF88"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Border>

                        <!-- Minimize Button -->
                        <Button Width="46" Height="40" Click="MinimizeButton_Click" 
                                Background="Transparent" BorderThickness="0" Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="border" Background="Transparent">
                                        <TextBlock Text="−" FontSize="18" Foreground="#888888" 
                                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#20FFFFFF"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <!-- Maximize Button -->
                        <Button Width="46" Height="40" Click="MaximizeButton_Click" 
                                Background="Transparent" BorderThickness="0" Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="border" Background="Transparent">
                                        <TextBlock Text="□" FontSize="14" Foreground="#888888" 
                                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#20FFFFFF"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <!-- Close Button -->
                        <Button Width="46" Height="40" Click="CloseButton_Click" 
                                Background="Transparent" BorderThickness="0" Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="border" Background="Transparent">
                                        <TextBlock Text="×" FontSize="20" Foreground="#888888" 
                                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#E81123"/>
                                            <Setter Property="TextBlock.Foreground" Value="White"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Main Content -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Sidebar -->
                <Border Grid.Column="0" Background="#0D0D12" BorderBrush="#1A1A25" BorderThickness="0,0,1,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Logo -->
                        <StackPanel Grid.Row="0" Margin="0,30,0,40" HorizontalAlignment="Center">
                            <TextBlock FontFamily="Segoe UI Black" FontSize="28" HorizontalAlignment="Center">
                                <Run Text="PRETO" Foreground="White"/><Run Text="BOOST" Foreground="#00D4FF"/>
                            </TextBlock>
                            <TextBlock Text="2.0" FontFamily="Segoe UI" FontSize="14" 
                                       Foreground="#00D4FF" HorizontalAlignment="Center" Margin="0,-5,0,0"/>
                        </StackPanel>

                        <!-- Navigation Menu -->
                        <StackPanel Grid.Row="1">
                            <RadioButton x:Name="UniversalBoostBtn" 
                                         Style="{StaticResource MenuButton}" 
                                         Content="UNIVERSAL BOOST" 
                                         IsChecked="True"
                                         Command="{Binding NavigateToUniversalBoostCommand}"/>
                            <RadioButton Style="{StaticResource MenuButton}" 
                                         Content="WIN10 BOOST" 
                                         Command="{Binding NavigateToWin10BoostCommand}"/>
                            <RadioButton Style="{StaticResource MenuButton}" 
                                         Content="GPU BOOST" 
                                         Command="{Binding NavigateToGpuBoostCommand}"/>
                            <RadioButton Style="{StaticResource MenuButton}" 
                                         Content="LIMPEZA" 
                                         Command="{Binding NavigateToCleaningCommand}"/>
                        </StackPanel>

                        <!-- Footer -->
                        <StackPanel Grid.Row="2" Margin="15,0,15,20">
                            <Border Height="1" Background="#1A1A25" Margin="0,0,0,15"/>
                            <TextBlock Text="v2.0.0" FontSize="11" Foreground="#444444" 
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Content Area -->
                <Border Grid.Column="1" Background="#0A0A0F">
                    <ContentControl Content="{Binding CurrentPage}" Margin="0"/>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>
