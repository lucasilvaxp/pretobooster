<UserControl x:Class="PretoBoost.Views.Win10BoostPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="900"
             Background="Transparent">

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,25">
                <TextBlock Text="WIN10 BOOST" Style="{StaticResource TitleTextStyle}"/>
                <TextBlock Text="Otimizações específicas para Windows 10/11" 
                           FontSize="14" Foreground="#666666" Margin="0,5,0,0"/>
            </StackPanel>

            <!-- Content Grid -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left Column -->
                <StackPanel Grid.Column="0">
                    <!-- Sistema Card -->
                    <Border Style="{StaticResource CardPanel}" Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Text="Sistema" Style="{StaticResource CategoryTextStyle}"/>
                            <ItemsControl ItemsSource="{Binding SystemToggles}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <CheckBox Style="{StaticResource ModernToggleSwitch}" 
                                                  Content="{Binding Name}" 
                                                  IsChecked="{Binding IsEnabled, Mode=TwoWay}"
                                                  Margin="0,8,0,0"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>

                    <!-- Unidades de Disco Card -->
                    <Border Style="{StaticResource CardPanel}">
                        <StackPanel>
                            <TextBlock Text="Unidades de disco" Style="{StaticResource CategoryTextStyle}"/>
                            <ItemsControl ItemsSource="{Binding DiskToggles}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <CheckBox Style="{StaticResource ModernToggleSwitch}" 
                                                  Content="{Binding Name}" 
                                                  IsChecked="{Binding IsEnabled, Mode=TwoWay}"
                                                  Margin="0,8,0,0"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Right Column -->
                <StackPanel Grid.Column="2">
                    <!-- Aplicativos Card -->
                    <Border Style="{StaticResource CardPanel}" Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Text="Aplicativos" Style="{StaticResource CategoryTextStyle}"/>
                            <ItemsControl ItemsSource="{Binding AppToggles}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <CheckBox Style="{StaticResource ModernToggleSwitch}" 
                                                  Content="{Binding Name}" 
                                                  IsChecked="{Binding IsEnabled, Mode=TwoWay}"
                                                  Margin="0,8,0,0"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>

                    <!-- Privacidade Card -->
                    <Border Style="{StaticResource CardPanel}">
                        <StackPanel>
                            <TextBlock Text="Privacidade" Style="{StaticResource CategoryTextStyle}"/>
                            <ItemsControl ItemsSource="{Binding PrivacyToggles}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <CheckBox Style="{StaticResource ModernToggleSwitch}" 
                                                  Content="{Binding Name}" 
                                                  IsChecked="{Binding IsEnabled, Mode=TwoWay}"
                                                  Margin="0,8,0,0"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>

            <!-- Action Buttons -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,25,0,0">
                <Button Style="{StaticResource SecondaryButton}" 
                        Content="Reverter Tudo" 
                        Command="{Binding RevertAllCommand}"
                        Margin="0,0,15,0"/>
                <Button Style="{StaticResource ActionButton}" 
                        Content="Aplicar Tudo" 
                        Command="{Binding ApplyAllCommand}"/>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</UserControl>
